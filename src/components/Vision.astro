---
const { t } = Astro.props;
// Permitir <br> en el título para saltos de línea
---
<div class="isolate overflow-hidden bg-gradient-to-b from-blue-200 to-white min-h-screen w-full">
  <div class="custom-shape-divider-top-1752796130">
    <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
        <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25" class="shape-fill"></path>
        <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5" class="shape-fill"></path>
        <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z" class="shape-fill"></path>
    </svg>
</div>
  
  <!-- Título en su propia sección -->
  <div class="relative py-6 sm:py-6 flex justify-center items-center" data-aos="flip-right" data-aos-duration="2000">
    <div class="mx-auto max-w-2xl px-6 text-center">        
      <h2 class="text-5xl sm:text-7xl font-bold tracking-tight text-gray-900">
        {t.vision.title}
      </h2>
      <div class="flex mt-2 justify-center">
        <div class="w-16 h-1 rounded-full bg-accent inline-flex"></div>
      </div>    
    </div>
  </div>

  <!-- Cards -->
  <div class="flex flex-col gap-8 items-center justify-center w-full px-2">
    <!-- Card 1: Imagen izquierda, texto derecha, difuminado derecha -->
    <div class="relative flex flex-col lg:flex-row items-center rounded-3xl overflow-hidden max-w-4xl w-full mx-auto" data-aos="fade-right"
    data-aos-duration="2000">
      <!-- Imagen -->
      <div class="flex-1 min-w-[200px]">
        <img src="images/supermarket.webp" alt="Supermarket" class="object-contain w-full h-64 lg:h-80" />
      </div>
      <!-- Texto -->
      <div class="flex-1 p-8 flex flex-col justify-center z-10">
        <h2 class="text-3xl font-bold mb-2 bg-gradient-to-r from-gray-500 to-blue-900 bg-clip-text text-transparent">
          <span set:html={t.vision.text}></span>
        </h2>
        <p class="text-lg text-gray-800 font-bold">
          <span set:html={t.vision.textTwo}></span>
        </p>
      </div>
      <!-- Difuminado a la derecha -->
      <div class="pointer-events-none absolute top-0 left-0 h-full w-32 z-20"
        style="background: linear-gradient(to left, transparent 60%, #bfdbfe 100%);"></div>
    </div>

    <!-- Card 2: Imagen derecha, texto izquierda, difuminado izquierda -->
    <div class="relative flex flex-col lg:flex-row-reverse items-center rounded-3xl overflow-hidden max-w-4xl w-full mx-auto" data-aos="fade-left"
    data-aos-duration="2000">
      <!-- Imagen -->
      <div class="flex-1 min-w-[200px]">
        <img src="images/world-supermarket.webp" alt="World Supermarket" class="object-contain w-full h-64 lg:h-80" />
      </div>
      <!-- Texto -->
      <div class="flex-1 p-8 flex flex-col justify-center z-10">
        <h2 class="text-3xl font-bold mb-2 bg-gradient-to-r from-gray-500 to-blue-900 bg-clip-text text-transparent">
          {t.vision.textThree}
        </h2>
        <p class="text-lg text-gray-800 font-bold">
          {t.vision.textFour}
        </p>
      </div>
      <!-- Difuminado a la izquierda -->
      <div class="pointer-events-none absolute top-0 right-0 h-full w-32 z-20"
        style="background: linear-gradient(to right, transparent 60%, #bfdbfe 100%);"></div>
    </div>
  </div>

  <div class="custom-shape-divider-bottom-1752798359">
    <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
        <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25" class="shape-fill"></path>
        <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5" class="shape-fill"></path>
        <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z" class="shape-fill"></path>
    </svg>
</div>
</div>

<style>
  .typewriter-js {
    min-height: 1em;
    display: inline-block;
    white-space: pre-line;
  }
  .caret {
    display: inline-block;
    width: 1ch;
    color: #fff;
    animation: blink-caret 0.75s step-end infinite;
    font-weight: 400;
    font-size: inherit;
  }
  @keyframes blink-caret {
    from, to { opacity: 0; }
    50% { opacity: 1; }
  }
</style>


