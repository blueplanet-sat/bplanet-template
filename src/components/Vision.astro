---
const { t } = Astro.props;
// Permitir <br> en el título para saltos de línea

---
<div class="isolate overflow-hidden bg-gradient-to-b from-blue-200 to-white min-h-screen w-full">
  <div class="custom-shape-divider-top-1752796130">
    <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
        <path d="M1200 0L0 0 598.97 114.72 1200 0z" class="shape-fill"></path>
    </svg>
  </div>
  
  <!-- Título en su propia sección -->
  <div class="relative py-6 sm:py-6 flex justify-center items-center" data-aos="flip-right" data-aos-duration="2000">
    <div class="mx-auto max-w-2xl px-6 text-center">        
      <h2 class="text-5xl sm:text-7xl font-bold tracking-tight text-gray-900">
        {t.vision.title}
      </h2>
      <div class="flex mt-2 justify-center">
        <div class="w-16 h-1 rounded-full bg-accent inline-flex"></div>
      </div>    
    </div>
  </div>
  
  <div class="relative w-full min-h-[70vh] flex justify-center items-center">
    <div class="flex flex-col lg:flex-row justify-center items-center gap-8 lg:gap-48 w-full relative z-10 px-2">
      <!-- Imagen 1 -->
      <div class="relative h-[40vh] sm:h-[50vh] md:h-[60vh] lg:h-[70vh] max-w-md flex-1 flex items-center justify-center bg-black/60 rounded-3xl mb-6 lg:mb-0" data-aos="fade-right" data-aos-duration="2000">
        <img
          src="images/supermarket.webp"
          alt="Supermarket"
          class="h-full w-full object-cover rounded-3xl shadow-lg"
        />
        <!-- <div class="absolute inset-0 z-10 pointer-events-none bg-gradient-to-t from-black/70 via-black/30 to-transparent rounded-3xl"></div> -->
        <div class="absolute rounded-3xl inset-0 flex flex-col items-center justify-top z-20 pointer-events-none bg-gradient-to-b from-black to-transparent">
          <span class="inline-block rounded-xl text-center px-6 space-y-4">
            <h2 class="bg-gradient-to-r from-gray-200 to-blue-300 bg-clip-text text-transparent mt-6 text-xl sm:text-2xl md:text-4xl uppercase tracking-wide font-bold leading-relaxed drop-shadow-lg animate-fade-in delay-100">
              <span set:html={t.vision.text}></span>
            </h2>            
            <p class="text-white font-bold text-xl">
              <span set:html={t.vision.textTwo}></span>
            </p>
          </span>
        </div>
      </div>

      <!-- Imagen 2 -->
      <div class="relative h-[40vh] sm:h-[50vh] md:h-[60vh] lg:h-[70vh] max-w-md flex-1 flex items-center justify-center rounded-3xl" data-aos="fade-left" data-aos-duration="2000">
        <img
          src="images/world-supermarket.webp"
          alt="World Supermarket"
          class="h-full w-full object-cover rounded-3xl shadow-lg "
        />
        <div class="absolute rounded-3xl inset-0 flex flex-col items-center justify-end z-20 pointer-events-none bg-gradient-to-t from-black to-transparent">
          <div class="mx-auto max-w-2xl px-6 py-6 text-center">       
            <div class="mt-8 space-y-4 animate-fade-in delay-300">              
              <h2 class="bg-gradient-to-r from-gray-200 to-blue-300 bg-clip-text text-transparent mt-6 text-xl sm:text-2xl md:text-4xl uppercase tracking-wide font-bold bg-clip-text leading-relaxed animate-fade-in delay-100">
                {t.vision.textThree}
              </h2>
              <p class="text-white font-bold text-xl">
                {t.vision.textFour}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="custom-shape-divider-bottom-1752798359">
    <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
        <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25" class="shape-fill"></path>
        <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5" class="shape-fill"></path>
        <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z" class="shape-fill"></path>
    </svg>
</div>
</div>

<style>
  .typewriter-js {
    min-height: 1em;
    display: inline-block;
    white-space: pre-line;
  }
  .caret {
    display: inline-block;
    width: 1ch;
    color: #fff;
    animation: blink-caret 0.75s step-end infinite;
    font-weight: 400;
    font-size: inherit;
  }
  @keyframes blink-caret {
    from, to { opacity: 0; }
    50% { opacity: 1; }
  }
</style>


