---
const { t } = Astro.props;
const team = t.team;
---

<section class="bg-white py-24">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto mb-16 max-w-2xl text-center">
      <h2 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">{team.title}</h2>
      <div class="flex mt-6 justify-center">
            <div class="w-16 h-1 rounded-full bg-accent inline-flex"></div>
          </div>
      <p class="mt-4 text-lg text-gray-600">
        {team.subtitle}
      </p>
    </div>
    
    <div class="grid gap-12 sm:grid-cols-2 lg:grid-cols-4">
      {
        team.members.map((member : any) => (
          <div
            class="group relative overflow-hidden rounded-2xl bg-white p-6 shadow-md transition-all duration-500 hover:shadow-xl hover:-translate-y-1"
          >
            <span class="absolute inset-0 rounded-2xl border-2 border-accent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></span>
            <img
              class="mx-auto h-24 w-24 rounded-full object-cover border-2 border-accent group-hover:border-accent/50 transition-all duration-500"
              src={`images/${member.image}`}
              alt={`Portrait of ${member.name}`}
            />
            <div class="mt-6 text-center relative z-10">
              <h3 class="text-lg font-semibold text-gray-900 group-hover:text-accent transition-colors duration-500">
                {member.name}
              </h3>
              <p class="text-accent text-sm font-medium group-hover:text-gray-700">
                {member.position}
              </p>
              <p class="mt-2 text-sm text-gray-500 group-hover:text-gray-600">
                {member.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>