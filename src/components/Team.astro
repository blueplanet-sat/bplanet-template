---
import { getTranslations } from '../lib/i18n';

const t = getTranslations('en');
const team = t.aboutUs;
---

<section class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto mb-16 max-w-2xl text-center">
      <h2 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">The core team</h2>
      <p class="mt-4 text-lg text-gray-600">
        Weâ€™re a passionate team of experts working to push boundaries and innovate in every mission.
      </p>
    </div>

    <div class="grid gap-12 sm:grid-cols-2 lg:grid-cols-4">
      {
        team.map((member) => (
          <div class="rounded-2xl bg-white p-6 shadow-md hover:shadow-lg transition-shadow duration-300">
            <img
              class="mx-auto h-24 w-24 rounded-full object-cover border-2 border-indigo-500"
              src={`images/${member.image}`}
              alt={`Portrait of ${member.name}`}
            />
            <div class="mt-6 text-center">
              <h3 class="text-lg font-semibold text-gray-900">{member.name}</h3>
              <p class="text-indigo-600 text-sm font-medium">{member.position}</p>
              <p class="mt-2 text-sm text-gray-500">{member.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>