---
const { t } = Astro.props;
const about = t.about;
---

<section class="pt-24">
  <div
    class="mx-auto mb-16 max-w-2xl text-center"
    data-aos="flip-down"
    data-aos-duration="2000"
  >
    <div
      class="mx-auto mb-16 max-w-2xl text-center"
      data-aos="flip-down"
      data-aos-duration="2000"
    >
      <h2 class="text-5xl sm:text-7xl font-bold tracking-tight text-gray-900">
        {about.name}
      </h2>
      <div class="flex mt-6 justify-center">
        <div class="w-16 h-1 rounded-full bg-accent inline-flex"></div>
      </div>
    </div>
    <!-- <h2 class="text-5xl sm:text-7xl font-bold tracking-tight text-gray-900">
      {about.name}
    </h2> -->
  </div>
  <div
    class="mx-auto max-w-screen-xl px-4 py-8 sm:px-6 lg:px-8"
    data-aos="zoom-out-down"
    data-aos-duration="2000"
  >
    <!-- Contenedor padre -->


    <div class="div-about-us grid grid-cols-1 gap-4 md:grid-cols-2 md:items-center md:gap-8">
      <div>
        <div class="max-w-lg md:max-w-none">
          <h2 class="text-2xl font-semibold text-gray-900 sm:text-3xl">
            {about.title}
          </h2>

          <p class="mt-4 text-gray-700">
            <span set:html={about.subtitle} />
          </p>
        </div>
      </div>

      <div class="flex justify-center">
        <img class="w-[400px] h-[400px] rounded-md shadow-[10px_8px_24px_rgba(10,37,64,0.85)]" src="images/aboutUs.webp" alt="about us" />
      </div>
    </div> 
  </div>
</section>
