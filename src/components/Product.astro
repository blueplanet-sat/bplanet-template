---
const { t } = Astro.props;
const product = t.product;
---

<div>
  <section
    class="text-gray-200 bg-slate-950 bg-[radial-gradient(circle_farthest-side,rgba(255,0,182,.15),rgba(255,255,255,0))]"
  >
    <div class="max-w-6xl mx-auto px-5 pt-12">
      <div
        class="mx-auto mb-16 max-w-xl text-center"
        data-aos="slide-up"
        data-aos-duration="1000"
      >
        <h2 class="text-4xl font-bold tracking-tight text-gray-200 sm:text-5xl">
          {product.title}
        </h2>
        <div class="flex mt-6 justify-center">
          <div class="w-16 h-1 rounded-full bg-accent inline-flex"></div>
        </div>
        <p class="mt-4 text-lg text-gray-300">{product.subtitle}</p>
      </div>

      <section
        class="max-w-7xl mx-auto px-4 grid md:grid-cols-2 gap-8 items-center"
        data-aos="flip-right"
        data-aos-delay="800"
      >
        <!-- Imagen -->
        <div class="order-2 md:order-1">
          <img
            src="/images/earth.webp"
            alt="Earth image"
            loading="lazy"
            class="rounded-xl shadow-xl object-cover w-full h-full max-h-[500px] transition-transform duration-1000 hover:scale-105"
          />
        </div>

        <!-- Texto -->
        <div class="space-y-6 order-1 md:order-2">
          <h2 class="text-3xl md:text-4xl font-bold text-white">
            {product.section1.title}
          </h2>
          <p class="text-lg text-gray-300">
            {product.section1.description}
          </p>
          <ul class="space-y-4 text-gray-300">
            <li class="flex gap-3 items-start">
              <img
                src="svg/check.svg"
                class="w-5 h-5 flex-shrink-0"
                alt="Icon svg"
              />
              <span
                ><strong>{product.section1.subtitle1}</strong>
                {product.section1.description1}</span
              >
            </li>
            <li class="flex gap-3 items-start">
              <img
                src="svg/check.svg"
                class="w-5 h-5 flex-shrink-0"
                alt="Icon svg"
              />
              <span
                ><strong>{product.section1.subtitle2}</strong>
                {product.section1.description2}</span
              >
            </li>
            <li class="flex gap-3 items-start">
              <img
                src="svg/check.svg"
                class="w-5 h-5 flex-shrink-0"
                alt="Icon svg"
              />
              <span
                ><strong>{product.section1.subtitle3}</strong>
                {product.section1.description3}</span
              >
            </li>
          </ul>
        </div>
      </section>

      <section
        class="max-w-7xl mx-auto px-4 py-8 grid md:grid-cols-2 gap-8 items-center"
        data-aos="fade-right"
        data-aos-delay="400"
      >
        <div class="space-y-6">
          <h2 class="text-3xl md:text-4xl font-bold text-white">
            {product.section2.title}
          </h2>
          <p class="text-lg text-gray-300">
            {product.section2.description}
          </p>

          <div class="space-y-4">
            <div class="flex items-start gap-4">
              <img
                src="/svg/planet.svg"
                alt="Planet"
                class="w-8 h-8 mt-1"
                loading="lazy"
              />
              <div>
                <h3 class="text-white font-semibold">
                  {product.section2.subtitle1}
                </h3>
                <p class="text-gray-400 text-sm">
                  {product.section2.description1}
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <img
                src="/svg/planet.svg"
                alt="Planet"
                class="w-8 h-8 mt-1"
                loading="lazy"
              />
              <div>
                <h3 class="text-white font-semibold">
                  {product.section2.subtitle2}
                </h3>
                <p class="text-gray-400 text-sm">
                  {product.section2.description2}
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <img
                src="/svg/planet.svg"
                alt="Planet"
                class="w-8 h-8 mt-1"
                loading="lazy"
              />
              <div>
                <h3 class="text-white font-semibold">
                  {product.section2.subtitle3}
                </h3>
                <p class="text-gray-400 text-sm">
                  {product.section2.description3}
                </p>
              </div>
            </div>
          </div>
        </div>

        <div>
          <img
            src="/images/image1.webp"
            alt="Earth from satellite"
            loading="lazy"
            class="rounded-xl shadow-lg object-cover w-full h-full max-h-[500px] transition-transform duration-1000 hover:scale-105"
          />
        </div>
      </section>

      <section
        class="max-w-7xl mx-auto px-4 pb-8 grid md:grid-cols-2 gap-8 items-center"
        data-aos="fade-left"
        data-aos-delay="400"
      >
        <!-- Imagen -->
        <div class="order-2 md:order-1">
          <img
            src="/images/image2.webp"
            alt="v-GLOBE overview"
            loading="lazy"
            class="rounded-xl shadow-xl object-cover w-full h-full max-h-[500px] transition-transform duration-1000 hover:scale-105"
          />
        </div>

        <!-- Texto -->
        <div class="space-y-6 order-1 md:order-2">
          <h2 class="text-3xl md:text-4xl font-bold text-white">
            {product.section3.title}
          </h2>
          <ul class="space-y-4 text-gray-300">
            <li class="flex gap-3 items-start">
              <img
                src="svg/check.svg"
                class="w-5 h-5 flex-shrink-0"
                alt="Icon svg"
              />
              <span
                ><strong>{product.section3.subtitle1}</strong>
                {product.section3.description1}</span
              >
            </li>
            <li class="flex gap-3 items-start">
              <img
                src="svg/check.svg"
                class="w-5 h-5 flex-shrink-0"
                alt="Icon svg"
              />
              <span
                ><strong>{product.section3.subtitle2}</strong>
                {product.section3.description2}</span
              >
            </li>
            <li class="flex gap-3 items-start">
              <img
                src="svg/check.svg"
                class="w-5 h-5 flex-shrink-0"
                alt="Icon svg"
              />
              <span
                ><strong>{product.section3.subtitle3}</strong>
                {product.section3.description3}</span
              >
            </li>
            <li class="flex gap-3 items-start">
              <img
                src="svg/check.svg"
                class="w-5 h-5 flex-shrink-0"
                alt="Icon svg"
              />
              <span
                ><strong>{product.section3.subtitle4}</strong>
                {product.section3.description4}</span
              >
            </li>
          </ul>
        </div>
      </section>

      <div
        class="grid gap-6 md:grid-cols-3 text-white py-16 rounded-xl shadow-xl"
        data-aos="fade-up"
        data-aos-delay="800"
      >
        <!-- CARD 1 -->
        <div
          class="bg-gradient-to-r from-gray-900 to-primary p-6 rounded-lg shadow-md transition-transform duration-300 hover:scale-105 hover:shadow-2xl"
        >
          <div class="flex items-center justify-center mb-4">
            <img
              src="svg/supermarket.svg"
              class="w-12 h-12"
              alt="Icon svg"
              loading="lazy"
            />
          </div>
          <h3 class="text-xl font-semibold mb-4 text-center">
            {product.features[0].title}
          </h3>
          <ul class="space-y-3 text-md">
            <li class="flex items-start justify-start gap-3">
              <span
                class="w-2 h-2 mt-2 rounded-full bg-emerald-500 flex-shrink-0"
              ></span>
              <p>{product.features[0].description1}</p>
            </li>
            <li class="flex items-start justify-start gap-3">
              <span
                class="w-2 h-2 mt-2 rounded-full bg-emerald-500 flex-shrink-0"
              ></span>
              <p>{product.features[0].description2}</p>
            </li>
            <li class="flex items-start justify-start gap-3">
              <span
                class="w-2 h-2 mt-2 rounded-full bg-emerald-500 flex-shrink-0"
              ></span>
              <p>{product.features[0].description3}</p>
            </li>
            <li class="flex items-start justify-start gap-3">
              <span
                class="w-2 h-2 mt-2 rounded-full bg-emerald-500 flex-shrink-0"
              ></span>
              <p>{product.features[0].description4}</p>
            </li>
            <li class="flex items-start justify-start gap-3">
              <span
                class="w-2 h-2 mt-2 rounded-full bg-emerald-500 flex-shrink-0"
              ></span>
              <p>{product.features[0].description5}</p>
            </li>
          </ul>
        </div>

        <!-- CARD 2: Massive, Fast & Affordable Data -->
        <div
          class="bg-gradient-to-r from-gray-900 to-primary p-6 rounded-lg shadow-md transition-transform duration-300 hover:scale-105 hover:shadow-2xl"
        >
          <div class="flex items-center justify-center mb-4">
            <img
              src="svg/earth.svg"
              class="w-12 h-12"
              alt="Icon svg"
              loading="lazy"
            />
          </div>
          <h3 class="text-xl font-semibold mb-4 text-center">
            {product.features[1].title}
          </h3>
          <ul class="space-y-3 text-md">
            <li class="flex items-start gap-3">
              <span class="w-2 h-2 mt-2 rounded-full bg-blue-300 flex-shrink-0"
              ></span>
              {product.features[1].description1}
            </li>
            <li class="flex items-start gap-3">
              <span class="w-2 h-2 mt-2 rounded-full bg-blue-300 flex-shrink-0"
              ></span>
              {product.features[1].description2}
            </li>
            <li class="flex items-start gap-3">
              <span class="w-2 h-2 mt-2 rounded-full bg-blue-300 flex-shrink-0"
              ></span>
              {product.features[1].description3}
            </li>
            <li class="flex items-start gap-3">
              <span class="w-2 h-2 mt-2 rounded-full bg-blue-300 flex-shrink-0"
              ></span>
              {product.features[1].description4}
            </li>
            <li class="flex items-start gap-3">
              <span class="w-2 h-2 mt-2 rounded-full bg-blue-300 flex-shrink-0"
              ></span>
              {product.features[1].description5}
            </li>
          </ul>
        </div>

        <!-- CARD 3: v-GLOBE: Global Coverage Reimagined -->
        <div
          class="bg-gradient-to-r from-gray-900 to-primary p-6 rounded-lg shadow-md transition-transform duration-300 hover:scale-105 hover:shadow-2xl"
        >
          <div class="flex items-center justify-center mb-4">
            <img
              src="svg/satellite.svg"
              class="w-12 h-12"
              alt="Icon svg"
              loading="lazy"
            />
          </div>
          <h3 class="text-xl font-semibold mb-4 text-center">
            {product.features[2].title}
          </h3>
          <ul class="space-y-3 text-md">
            <li class="flex items-start gap-3">
              <span
                class="w-2 h-2 mt-2 rounded-full bg-yellow-300 flex-shrink-0"
              ></span>
              {product.features[2].description1}
            </li>
            <li class="flex items-start gap-3">
              <span
                class="w-2 h-2 mt-2 rounded-full bg-yellow-300 flex-shrink-0"
              ></span>
              {product.features[2].description2}
            </li>
            <li class="flex items-start gap-3">
              <span
                class="w-2 h-2 mt-2 rounded-full bg-yellow-300 flex-shrink-0"
              ></span>
              {product.features[2].description3}
            </li>
            <li class="flex items-start gap-3">
              <span
                class="w-2 h-2 mt-2 rounded-full bg-yellow-300 flex-shrink-0"
              ></span>
              {product.features[2].description4}
            </li>
            <li class="flex items-start gap-3">
              <span
                class="w-2 h-2 mt-2 rounded-full bg-yellow-300 flex-shrink-0"
              ></span>
              {product.features[2].description5}
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</div>
